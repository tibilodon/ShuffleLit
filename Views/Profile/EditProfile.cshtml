@using ShuffleLit.ViewModels
@model EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<form method="post" asp-action="EditProfile" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Password">Password</label>
        <input asp-for="Password" class="form-control" placeholder="Password">
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConfirmPassword">ConfirmPassword</label>
        <input asp-for="ConfirmPassword" class="form-control" placeholder="ConfirmPassword">
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>