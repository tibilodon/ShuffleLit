@using ShuffleLit.Data.Enum
@using ShuffleLit.Interfaces
@model Literature
@inject IPlaceholderImgService PlaceholderImg

@{
    ViewData["Title"] = "Delete Lit";
}

<div class="p-4 p-md-5 mb-4 ">
    <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
        <div class="col p-4 d-flex g-3 flex-column position-static">
            <strong class="d-inline-block mb-2 text-primary">@Model.LiteratureCategory</strong>
            <h3 class="mb-0">@Model.Title</h3>
            <div class="d-flex">
                <strong>State:</strong>&nbsp;
                <p class="mb-1 text-muted">@Model.LiteratureState</p>
            </div>
            <div class="d-flex">
            <strong class="card-text">Description:</strong>&nbsp;
            <p class="card-text">@Model.Description</p>
            </div> 
            <div class="d-flex">
            <strong class="card-text">Link:</strong>&nbsp;
            <p class="card-text">@Model.LinkUrl</p>
            </div>
        </div>
        <div class="col-auto d-none d-lg-block">
            <!--extract thumbnail feature-->
            <img class="card-img-top" src="@PlaceholderImg.PlaceholderImg(Model.LiteratureCategory)" width="100%" height="225" alt="Card image cap" />
        </div>
    </div>
</div>

<!--handle delete-->
<div class="form-group">
    <h1>Would you like to delete this Literature?</h1>
    <form action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Confirm" class="btn btn-danger float-right mt-3" />
    </form>
</div>