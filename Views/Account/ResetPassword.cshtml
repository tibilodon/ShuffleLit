@using ShuffleLit.ViewModels
@model ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<div class="container col-xl-10 col-xxl-8 px-4 py-5">

    <div class="row align-items-center g-lg-5 py-5">
        <div class="col-lg-7 text-center text-lg-start">
            <h1 class="display-4 fw-bold lh-1 mb-3">ShuffleLit</h1>
            <p class="col-lg-10 fs-4">Please enter your email address and your new password.</p>
        </div>
        <div class="col-md-10 mx-auto col-lg-5">

            <form class="p-3 p-md-5 border rounded-3 bg-light" asp-action="ResetPassword" asp-controller="Account" method="post">
                <input asp-for="Code" hidden />
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-floating mb-3">
                    <input type="email" class="form-control" asp-for="Email" placeholder="name@example.com">
                    <label asp-for="Email">Email address</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control" asp-for="Password" placeholder="Password">
                    <label asp-for="Password">Password</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
                    <label asp-for="ConfirmPassword">Confirm Password</label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <button class="w-100 btn btn-lg btn-primary" type="submit">Confirm</button>
            </form>

        </div>
    </div>
</div>