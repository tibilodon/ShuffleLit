@using ShuffleLit.ViewModels
@model RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

 @if (TempData["Error"] != null)
        {
            <div class="col-md-12 alert alert-danger">
                <span><b>Sorry!</b> - @TempData["Error"] </span>
            </div>
        }
        
<div class="container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-lg-5 py-5">
      <div class="col-lg-7 text-center text-lg-start">
        <h1 class="display-4 fw-bold lh-1 mb-3">ShuffleLit</h1>
        <p class="col-lg-10 fs-4">Manage your own literatures by creating an account.</p>
      </div>
      <div class="col-md-10 mx-auto col-lg-5">
        <form class="p-3 p-md-5 border rounded-3 bg-light" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

          <div class="form-floating mb-3">
            <input type="email" class="form-control" asp-for="EmailAddress" placeholder="name@example.com">
            <label asp-for="EmailAddress">Email address</label>
             <span asp-validation-for="EmailAddress" class="text-danger"></span>
          </div>

          <div class="form-floating mb-3">
            <input type="password" class="form-control" asp-for="Password" placeholder="Password">
            <label asp-for="Password">Password</label>
              <span asp-validation-for="Password" class="text-danger"></span>
          </div>

  <div class="form-floating mb-3">
            <input type="password" class="form-control" asp-for="ConfirmPassword" placeholder="Confirm Password">
            <label asp-for="ConfirmPassword">Confirm Password</label>
                      <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
          </div>

          <button class="w-100 btn btn-lg btn-primary" type="submit">Sign up</button>
          <hr class="my-4">

                <a class="text-center" asp-action="ForgotPassword">Forgot your password?</a>
        </form>
        <small>Already a member?</small>
            <a asp-action="Login" class="w-100 btn btn-lg btn-success" >Log In</a>
      </div>
    </div>
  </div>