@using Microsoft.AspNetCore.Identity

<div class="h-100 container col-xl-10 col-xxl-8 px-4 py-5">
    <div class="h-100 d-flex flex-column align-items-center justify-content-center">
        <h1 class="display-5 fw-bold">Password reset Successful</h1>
        @if (!User.Identity.IsAuthenticated)
        {
            <div class="col-lg-6 mx-auto">
                <p class="lead mb-4">Please Log in</p>
                <div class="d-grid gap-2 d-sm-flex justify-content-sm-center">
                    <a asp-action="Login" class="btn btn-primary btn-lg px-4 gap-3">Log in</a>
                </div>
            </div>
        }
    </div>
</div>